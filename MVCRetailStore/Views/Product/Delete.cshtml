@model MVCRetailStore.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.ProductName</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>
</dl>

<form asp-action="DeleteProduct" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="ImageUrl" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
