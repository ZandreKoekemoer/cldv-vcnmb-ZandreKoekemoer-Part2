@model IEnumerable<MVCRetailStore.Models.Customer>

@{
    ViewData["Title"] = "Customers List";
}

<h1>Customers</h1>
<a class="btn btn-success mb-3" asp-action="Create" asp-controller="Customer">Add New Customer</a>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
else if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.OrderByDescending(c => c.Timestamp))
            {
                <tr>
                    <td>@c.customerName</td>
                    <td>@c.customerEmail</td>
                    <td>@c.customerAddress</td>
                    <td>@c.customerPhone</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No customers found.</p>
}
