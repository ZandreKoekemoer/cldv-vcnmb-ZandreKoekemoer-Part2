@model IEnumerable<MVCRetailStore.Models.Order>
@{
    ViewData["Title"] = "Orders";
}
<h1>Orders</h1>

<p><a class="btn btn-success" asp-action="Create">Create New</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order RowKey</th>
            <th>Customer RowKey</th>
            <th>Product RowKey</th>
            <th>Qty</th>
            <th>Total</th>
            <th>Status</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RowKey</td>
                <td>@item.customerId</td>
                <td>@item.productId</td>
                <td>@item.orderQuantity</td>
                <td>@item.orderTotal</td>
                <td>@item.orderStatus</td>
                <td>@item.orderDate</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey">Details</a>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
