@model MVCRetailStore.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Customer RowKey</dt>
        <dd class="col-sm-10">@Model.customerId</dd>

        <dt class="col-sm-2">Product RowKey</dt>
        <dd class="col-sm-10">@Model.productId</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.orderQuantity</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.orderTotal</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.orderDate</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.orderStatus</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
